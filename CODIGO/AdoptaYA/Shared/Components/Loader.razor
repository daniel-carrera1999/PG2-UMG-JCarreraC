<style>
    .container-loader {
        position: absolute;
        top: 0;
        right: 0;
        bottom: 0;
        left: 0;
        width: 100%;
        height: 100%;
        display: flex;
        justify-content: center;
        align-items: center;
        z-index: 10000;
    }

    .container-loader {
        position: sticky;
        top: 50%; /* Centrado vertical en el área visible */
        left: 0;
        width: 100%;
        height: 0; /* Cambia a 0 para no afectar el layout */
        display: flex;
        justify-content: center;
        align-items: center;
        z-index: 10000;
        transform: translateY(-50%); /* Centra perfectamente */
    }
</style>

@if (Loading)
{
    <div class="container-loader">
        <div class="rz-w-100 rz-display-flex rz-justify-content-center rz-align-items-center">
            <div class="envelope-loader">
                <div class="envelope-loader-lines"></div>
            </div>
        </div>
    </div>
}

@code {
    [Parameter] public bool Loading { get; set; } = false;
}