@using AdoptaYA.Functionalities.AdoptionRequestManagement.Model

<Loader Loading="@loading" />

<RadzenTemplateForm TItem="AdoptionRequestReturnDTO" Data="@model" Submit="@OnSubmit">
    <RadzenRow Gap="1rem">
        <RadzenColumn Size="12">
            <RadzenFieldset Text="Registrar Retorno" class="fw-bold">
                <RadzenStack Gap="1rem">

                    <RadzenRow AlignItems="AlignItems.Center" class="mt-1">
                        <RadzenColumn Size="12" SizeMD="4">
                            <RadzenLabel Text="Fecha de Retorno" Component="ReturnDate" class="fw-bold" />
                        </RadzenColumn>
                        <RadzenColumn Size="12" SizeMD="8">
                            <RadzenDatePicker @bind-Value="@model.ReturnDate"
                                              Name="ReturnDate"
                                              ShowTime="false"
                                              DateFormat="dd/MM/yyyy"
                                              Style="width: 100%;" />
                            <RadzenRequiredValidator Component="ReturnDate"
                                                     Text="La fecha de retorno es requerida" />
                        </RadzenColumn>
                    </RadzenRow>

                    <RadzenRow AlignItems="AlignItems.Center">
                        <RadzenColumn Size="12" SizeMD="4">
                            <RadzenLabel Text="Observaciones" Component="Observations" class="fw-bold" />
                        </RadzenColumn>
                        <RadzenColumn Size="12" SizeMD="8">
                            <RadzenTextArea @bind-Value="@model.Observations"
                                            Name="Observations"
                                            Rows="5"
                                            Placeholder="Ingrese los motivos y observaciones del retorno"
                                            Style="width: 100%;" />
                            <RadzenRequiredValidator Component="Observations"
                                                     Text="Las observaciones son requeridas" />
                        </RadzenColumn>
                    </RadzenRow>

                </RadzenStack>
            </RadzenFieldset>
        </RadzenColumn>
    </RadzenRow>

    <RadzenRow class="mt-3">
        <RadzenColumn Size="12" class="d-flex justify-content-end gap-2">
            <RadzenButton ButtonType="ButtonType.Button"
                          ButtonStyle="ButtonStyle.Light"
                          Text="Cancelar"
                          Click="@OnCancel" />
            <RadzenButton ButtonType="ButtonType.Submit"
                          ButtonStyle="ButtonStyle.Success"
                          Text="Guardar Retorno"
                          Icon="save" />
        </RadzenColumn>
    </RadzenRow>
</RadzenTemplateForm>