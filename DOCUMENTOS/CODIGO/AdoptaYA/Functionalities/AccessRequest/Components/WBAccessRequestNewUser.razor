@layout LoginLayout

@using AdoptaYA.Functionalities.AccessRequest.Model

<RadzenTemplateForm Data="Form" Submit="@OnSubmitAsync" TItem="CreateNewUserForm" class="form-solicitud">
    <DataAnnotationsValidator />

    <!-- Usuario -->
    <RadzenRow>
        <RadzenFormField Text="Usuario" Variant="Variant.Filled" class="w-100 rz-text-align-left">
            <RadzenTextBox @bind-Value="Form.Username"
                           Name="Username"
                           class="form-input"
                           autocomplete="username" />
        </RadzenFormField>
        <ValidationMessage For="@(() => Form.Username)" class="rz-message rz-messages-error" />
    </RadzenRow>

    <!-- Correo -->
    <RadzenRow>
        <RadzenFormField Text="Correo" Variant="Variant.Filled" class="w-100 rz-text-align-left">
            <RadzenTextBox @bind-Value="Form.Email"
                           Name="Email"
                           class="form-input"
                           autocomplete="email" />
        </RadzenFormField>
        <ValidationMessage For="@(() => Form.Email)" class="rz-message rz-messages-error" />
    </RadzenRow>

    <!-- Nombres -->
    <RadzenRow>
        <RadzenFormField Text="Nombre" Variant="Variant.Filled" class="w-100 rz-text-align-left">
            <RadzenTextBox @bind-Value="Form.name"
                           Name="Name"
                           class="form-input"
                           autocomplete="given-name" />
        </RadzenFormField>
        <ValidationMessage For="@(() => Form.name)" class="rz-message rz-messages-error" />
    </RadzenRow>

    <!-- Apellidos -->
    <RadzenRow>
        <RadzenFormField Text="Apellido" Variant="Variant.Filled" class="w-100 rz-text-align-left">
            <RadzenTextBox @bind-Value="Form.lastname"
                           Name="LastName"
                           class="form-input"
                           autocomplete="family-name" />
        </RadzenFormField>
        <ValidationMessage For="@(() => Form.lastname)" class="rz-message rz-messages-error" />
    </RadzenRow>

    <!-- Contraseña -->
    <RadzenRow>
        <RadzenFormField Text="Contraseña" Variant="Variant.Filled" class="w-100 rz-text-align-left">
            <RadzenPassword @bind-Value="Form.Password"
                            Name="Password"
                            class="form-input"
                            autocomplete="new-password" />
        </RadzenFormField>
        <ValidationMessage For="@(() => Form.Password)" class="rz-message rz-messages-error" />
    </RadzenRow>

    <!-- Confirmar Contraseña -->
    <RadzenRow>
        <RadzenFormField Text="Confirmar Contraseña" Variant="Variant.Filled" class="w-100 rz-text-align-left">
            <RadzenPassword @bind-Value="Form.RepeatPassword"
                            Name="RepeatPassword"
                            class="form-input"
                            autocomplete="new-password" />
        </RadzenFormField>
        <ValidationMessage For="@(() => Form.RepeatPassword)" class="rz-message rz-messages-error" />
    </RadzenRow>

    <RadzenRow class="rz-display-flex rz-justify-content-center">
        <RadzenButton Text="Solicitar Acceso"
                      ButtonStyle="ButtonStyle.Primary"
                      ButtonType="ButtonType.Submit"
                      IsBusy="@busy"
                      class="solicitud-submit" />
    </RadzenRow>
</RadzenTemplateForm>

