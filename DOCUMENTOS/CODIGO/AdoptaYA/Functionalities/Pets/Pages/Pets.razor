@page "/mascotas"

<SessionValidator title="Mascotas" path="/mascotas">
	<Loader Loading="@loading" />

    <RadzenTabs TabPosition="TabPosition.Top" RenderMode="TabRenderMode.Client" @bind-SelectedIndex="TabsSelectedIndex">
        <Tabs>
            <RadzenTabsItem Text="Mascotas">
                <AdoptaYA.Functionalities.Pets.Components.PetsList @ref="petListRef" />
            </RadzenTabsItem>
            <RadzenTabsItem Text="Registrar mascota">
                <AdoptaYA.Functionalities.Pets.Components.AddPet OnSave="ChangeTab" />
            </RadzenTabsItem>
        </Tabs>
    </RadzenTabs>

</SessionValidator>