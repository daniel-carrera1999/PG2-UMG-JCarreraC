@using AdoptaYA.Functionalities.Profile.Model

<Loader Loading="@loading" />

<RadzenDataGrid Data="@references" TItem="PersonalReferenceResponseDTO" Class="w-100"
                AllowPaging="true" PageSize="5" AllowSorting="true" AllowFiltering="true"
                Responsive="true" EmptyText="No hay referencias personales registradas">
    <Columns>
        <RadzenDataGridColumn TItem="PersonalReferenceResponseDTO" Property="Name" Title="Nombre" />
        <RadzenDataGridColumn TItem="PersonalReferenceResponseDTO" Property="CellPhone" Title="Teléfono" />
        <RadzenDataGridColumn TItem="PersonalReferenceResponseDTO" Property="Relationship" Title="Vínculo" />
        <RadzenDataGridColumn TItem="PersonalReferenceResponseDTO" Property="Date" Title="Fecha de Registro" FormatString="{0:dd/MM/yyyy}" />
    </Columns>
</RadzenDataGrid>
