@if (applicant == null || applicant.Id == 0)
{
    @if (!ShowCreateApplicant)
    {
        <RadzenStack Gap="1rem" class="rz-mt-2">
            <RadzenText Text="No se encuentra registrado como solicitante" TextStyle="TextStyle.Body1" class="fw-bold" />
            <RadzenButton Text="Registrar como Solicitante" Icon="add" ButtonStyle="ButtonStyle.Primary"
                          Click="@(() => ShowCreateApplicant = true)" />
        </RadzenStack>
    }
    else
    {
        <AddApplicantInfo OnReloadData="ReloadDataAsync" />
    }
}
else
{
    @if (!ShowUpdateApplicant)
    {
        <RadzenStack Gap="1rem" class="rz-mt-2">
            <ApplicantInfo applicant="@applicant" />
            <RadzenButton Text="Actualizar información" Icon="edit" ButtonStyle="ButtonStyle.Primary"
                          Click="@(() => ShowUpdateApplicant = true)" />
        </RadzenStack>
    } else {
        <UpdateApplicationInfo OnReloadData="ReloadDataAsync" applicant="@applicant" />
    }
}
