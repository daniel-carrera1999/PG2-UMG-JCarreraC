@using System.Globalization

<RadzenText TextStyle="TextStyle.H5" class="fw-bold rz-mb-1">Perfil del Solicitante</RadzenText>

<RadzenRow>
    <RadzenColumn Size="12" SizeMD="6">
        <RadzenLabel Text="Nombre:" class="fw-bold" />
        <RadzenText Text="@applicant.Name" />
    </RadzenColumn>
    <RadzenColumn Size="12" SizeMD="6">
        <RadzenLabel Text="Apellido:" class="fw-bold" />
        <RadzenText Text="@applicant.LastName" />
    </RadzenColumn>
</RadzenRow>

<RadzenRow>
    <RadzenColumn Size="12" SizeMD="6">
        <RadzenLabel Text="Fecha de nacimiento:" class="fw-bold" />
        <RadzenText Text="@(applicant.Birthdate.ToString("dd/MM/yyyy") ?? "Sin fecha")" />
    </RadzenColumn>
    <RadzenColumn Size="12" SizeMD="6">
        <RadzenLabel Text="Correo electrónico:" class="fw-bold" />
        <RadzenText Text="@applicant.Email" />
    </RadzenColumn>
</RadzenRow>

<RadzenRow>
    <RadzenColumn Size="12" SizeMD="6">
        <RadzenLabel Text="Celular:" class="fw-bold" />
        <RadzenText Text="@applicant.CellNumber" />
    </RadzenColumn>
    <RadzenColumn Size="12" SizeMD="6">
        <RadzenLabel Text="Teléfono de casa:" class="fw-bold" />
        <RadzenText Text="@applicant.HomePhone" />
    </RadzenColumn>
</RadzenRow>

<RadzenRow>
    <RadzenColumn Size="12" SizeMD="6">
        <RadzenLabel Text="Dirección:" class="fw-bold" />
        <RadzenText Text="@applicant.Address" />
    </RadzenColumn>
    <RadzenColumn Size="12" SizeMD="6">
        <RadzenLabel Text="Ocupación:" class="fw-bold" />
        <RadzenText Text="@applicant.Occupation" />
    </RadzenColumn>
</RadzenRow>

<RadzenRow>
    <RadzenColumn Size="12" SizeMD="6">
        <RadzenLabel Text="Estado civil:" class="fw-bold" />
        <RadzenText Text="@applicant.MaritalStatus" />
    </RadzenColumn>
    <RadzenColumn Size="12" SizeMD="6">
        <RadzenLabel Text="Ingresos mensuales:" class="fw-bold" />
        <RadzenText Text="@applicant.MonthlyIncome.ToString("C", new CultureInfo("es-GT"))" />
    </RadzenColumn>
</RadzenRow>

<RadzenRow>
    <RadzenColumn Size="12" SizeMD="6">
        <RadzenLabel Text="Fecha de registro:" class="fw-bold" />
        <RadzenText Text="@applicant.Date.ToString("dd/MM/yyyy")" />
    </RadzenColumn>
    <RadzenColumn Size="12" SizeMD="6">
        <RadzenLabel Text="Estado:" class="fw-bold" />
        <br />
        <RadzenBadge Text="@(applicant.Inactive == 0 ? "Activo" : "Inactivo")"
                     BadgeStyle="@(applicant.Inactive == 0 ? BadgeStyle.Success : BadgeStyle.Danger)" />
    </RadzenColumn>
</RadzenRow>